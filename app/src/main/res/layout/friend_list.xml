<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cat2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"

    />
    <TextView
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="List of Friends"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/vintage"
        android:textAllCaps="true"/>

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:hint="Enter Name Of Friend" />

        <EditText
            android:id="@+id/edt_handphone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:hint="Enter New Handphone" />

        <EditText
            android:id="@+id/edt_address"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:hint="Enter Address" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:background="@drawable/ripple_effect"
            android:text="UPDATE"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Name of Friends"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/vintage"
        android:textAllCaps="true"/>
    <GridView
        android:id="@+id/gridView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="1">
    </GridView>

</LinearLayout>